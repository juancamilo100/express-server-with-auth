{
    "name": "home-inspections",
    "version": "1.0.4",
    "repository": "https://github.com/juancamilo100/home-inspections.git",
    "author": "JuanEspinosa <juancamilo100@hotmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf ./build && tsc",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "serve": "NODE_ENV=development && nodemon --inspect",
        "start": "node ./build/bin/www.js",
        "start:db": "docker-compose -f docker-compose.database.yml down && docker-compose -f docker-compose.database.yml up",
        "start:prod": "NODE_ENV=production BUILD_ID=dontKillMe pm2 start --no-daemon ./build/bin/www.js --name $APP_NAME &",
        "test": "jest --coverage --runInBand",
        "test:watch": "jest --coverage --runInBand --watch",
        "pretty": "tslint --fix -c tslint.json -p tsconfig.json",
        "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/database/ormconfig.ts"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cookie-parser": "~1.4.6",
        "cors": "^2.8.5",
        "debug": "~4.3.6",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "http-errors": "~2.0.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "~1.10.0",
        "nodemailer": "^6.9.14",
        "pg": "^8.12.0",
        "pm2": "^5.4.2",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.9.2",
        "typeorm": "^0.3.20",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/debug": "^4.1.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.0.0",
        "@types/nodemailer": "^6.4.15",
        "@types/nodemailer-direct-transport": "^1.0.35",
        "@types/nodemailer-smtp-transport": "^2.7.8",
        "@types/supertest": "^6.0.2",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/yamljs": "^0.2.34",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.3",
        "ts-node-dev": "^2.0.0",
        "tslint": "^6.1.3",
        "typescript": "^5.5.4"
    }
}
